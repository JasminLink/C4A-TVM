<UserControl x:Class="SampleApp.Pages.Pay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Name="Ticket" Text="Ticket" Style="{StaticResource Heading2}" />
                <TextBlock Name="TotalPrice" Text="Total price:" Style="{StaticResource Heading2}" />
                <TextBlock Name="TotalPaid" Text="Total paid:" Style="{StaticResource Heading2}" />
                <TextBlock Name="Remaining" Text="Remaining:" Style="{StaticResource Heading2}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
